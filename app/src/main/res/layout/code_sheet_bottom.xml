<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:background="@color/view_color"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="11dp"
            android:id="@+id/view"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_below="@id/view"
            android:layout_marginTop="@dimen/top_register"
            android:text="Resend confirmation code"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_centerHorizontal="true"
            app:cornerRadius="10sp"
            android:textColor="@color/black"
            app:strokeWidth="1dp"
            app:strokeColor="@color/strike_color"
            android:id="@+id/resend_mb"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:text="Change email"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_below="@id/resend_mb"
            android:layout_centerHorizontal="true"
            app:cornerRadius="10sp"
            android:textColor="@color/black"
            app:strokeWidth="1dp"
            app:strokeColor="@color/strike_color"
            android:id="@+id/change_mb"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:text="Log out"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_below="@id/change_mb"
            android:layout_centerHorizontal="true"
            app:cornerRadius="10sp"
            android:textColor="@color/black"
            app:strokeWidth="1dp"
            app:strokeColor="@color/strike_color"
            android:id="@+id/log_out_mb"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>