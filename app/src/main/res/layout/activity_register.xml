<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative1"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true">



            <ImageView
                android:layout_width="@dimen/image_Widht_height"
                android:layout_height="@dimen/image_Widht_height"
                android:src="@drawable/ic_firebase_logo"
                android:layout_centerHorizontal="true"
                android:id="@+id/image"/>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/relative2"
            android:visibility="gone"
            android:layout_marginBottom="25dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nexg"
                android:textAllCaps="false"
                android:textSize="@dimen/text_title_login"
                android:enabled="false"
                app:cornerRadius="100dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/next_mb"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/black"
                app:strokeWidth="1dp"
                app:strokeColor="@color/strike_color"
                app:cornerRadius="100dp"
                android:id="@+id/cancel_mb"/>

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>